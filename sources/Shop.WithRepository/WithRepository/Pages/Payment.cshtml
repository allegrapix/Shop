@page
@model Shop.WithRepository.Pages.PaymentModel
@{
    ViewData["Title"] = "Payment";
}
<h1>@ViewData["Title"]</h1>

<form method="post">

    You are about the pay for the following items:
    <ul>
        <li>@Model.ProductName</li>
    </ul>

    <div>
        Total price: @Model.Price
    </div>

    <button type="submit">Pay</button>
    <button type="button">Cancel</button>

</form>