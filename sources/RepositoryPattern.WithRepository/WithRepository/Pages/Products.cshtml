@page
@model Shop.WithRepository.Pages.ProductsModel
@{
}

<table>

    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>

    <tbody>
        @foreach (ProductViewModel product in Model.Products)
        {
            <tr>
                <td>
                    @product.Name
                </td>

                <td>
                    @product.Price lei
                </td>

                <td>
                    @product.Quantity
                </td>

                <td>
                    <form method="post">
                        @Html.Hidden("ProductId", product.Id)

                        <button type="submit" value="Buy">Buy</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>